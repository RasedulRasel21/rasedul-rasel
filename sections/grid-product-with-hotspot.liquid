  "name": "Product grid with hotspot",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Tisso vison in the wild"
    },
    {
      "type": "product_list",
      "id": "products",
      "label": "Products"
    }

  ],
  "presets": [
    {
      "name": "Product grid with hotspot"
    }
  ]
}
{% endschema %}