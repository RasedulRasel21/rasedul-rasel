<style>
  img{
      width: 100%;
      height: auto;
  }
  .cus_banner{
      display: flex;
      flex-direction: column;
  }
  .banner_announcement{
      display: flex;
      height: 64px;
      justify-content: space-between;
      align-items: center;
      padding-left: 5rem;
      padding-right: 5rem;
  }
  .image-with-text{
      display: flex;
      justify-content: space-between;
      padding-left: 5rem;
      padding-right: 5rem;
  }
  .image-with-text-textBox h2{
      font-size: 60px;
      margin: 20px 0;
      font-weight: 600;
  }
  .image-with-text-textBox p{
      max-width: 490px;
      font-size: 18px;
      line-height: 28px;
  }
  .cus_button a{
      display: block;
      width: auto;
      height: 44px;
      line-height: 40px;
      font-size: 20px;
      text-decoration: none;
      background: #FFF544;
      color: #000;
      border: 1px solid #000;
      letter-spacing: 1px;
      text-align: center;
      position: relative;
      transition: all .35s;
      padding: 0 24px;
  }
  .cus_button a span{
      position: relative;
      z-index: 2;
      display: flex;
      align-items: center;
  }
  .cus_button a:after{
      position: absolute;
      content: "";
      top: 0;
      left: 0;
      width: 0;
      height: 100%;
      background: #000;
      color: #fff;
      transition: all .35s;
  }
  .cus_button a:hover{
      color: #fff;
  }
  .cus_button a:hover:after{
      width: 100%;
  }
  .btn_arrow{
      width: 24px;
      animation: auto;
      margin-left: 10px;
  }
  .b_button a:hover .btn_arrow_black{
      display: none;
  }
  .b_button .btn_arrow_white {
      display: none;
  }
  .b_button a:hover .btn_arrow_white {
      display: block !important;
  }
</style>
<div class="cus_banner">
  {% comment %} announcement bar {% endcomment %}
  <div class="banner_announcement">
    <div class="b_logo"><img src="{{ section.settings.logo | img_url : 'master' }}"></div>
    <div class="announcement_text">{{ section.settings.ann_text }}</div>
    <div class="b_button cus_button">
      <a href="{{ section.settings.b_url }}"><span>{{ section.settings.b_button_title }} <img class="btn_arrow btn_arrow_black" src="https://cdn.shopify.com/s/files/1/0709/6339/6854/files/Line_15.png?v=1720114463"> <img class="btn_arrow btn_arrow_white" src="https://cdn.shopify.com/s/files/1/0709/6339/6854/files/Line_15_1.png?v=1720114805"></span></a>
    </div>
  </div>

  {% comment %} Banner section {% endcomment %}
  <div class="banner_image">
    <img src="{{ section.settings.b_image | img_url : 'master' }}">
  </div>
  <div class="image-with-text">
    <div class="image-with-text-textBox">
      <h2>{{ section.settings.img_text_title }}</h2>
      <p>{{ section.settings.img_text_subtext }}</p>
      <a href="{{ section.settings.img_text_btn_url }}" class="cus_button">{{ section.settings.img_text_btn }}</a>
    </div>
    <div class="image-with-text-img">
      <img src="{{ section.settings.banner_text_image | img_url : 'master' }}">
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Banner v2",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Announcement Bar"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Add logo"
    },
    {
      "type": "text",
      "id": "ann_text",
      "label": "Announcement text",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "b_button_title",
      "label": "Button Title",
      "default": "CHOOSE GIFT"
    },
    {
      "type": "url",
      "id": "b_url",
      "label": "Button link/Url"
    },
    {
      "type": "header",
      "content": "Banner section"
    },
    {
      "type": "image_picker",
      "id": "b_image",
      "label": "Banner image"
    },
    {
      "type": "text",
      "id": "img_text_title",
      "label": "Banner Title",
      "default": "The Gift Guide"
    },
    {
      "type": "text",
      "id": "img_text_subtext",
      "label": "Banner subtext",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "img_text_btn",
      "label": "Button Title",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "img_text_btn_url",
      "label": "Button link/Url"
    },
    {
      "type": "image_picker",
      "id": "banner_text_image",
      "label": "Banner text image"
    }

  ],
  "presets": [
    {
      "name": "Banner v2"
    }
  ]
}
{% endschema %}
