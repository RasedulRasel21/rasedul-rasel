      "label": "Announcement text",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "b_button_title",
      "label": "Button Title",
      "default": "CHOOSE GIFT"
    },
    {
      "type": "url",
      "id": "b_url",
      "label": "Button link/Url"
    },
    {
      "type": "header",
      "content": "Banner section"
    },
    {
      "type": "image_picker",
      "id": "b_image",
      "label": "Banner image"
    },
    {
      "type": "text",
      "id": "img_text_title",
      "label": "Banner Title",
      "default": "The Gift Guide"
    },
    {
      "type": "text",
      "id": "img_text_subtext",
      "label": "Banner subtext",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "img_text_btn",
      "label": "Button Title",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "img_text_btn_url",
      "label": "Button link/Url"
    },
    {
      "type": "image_picker",
      "id": "banner_text_image",
      "label": "Banner text image"
    }

  ],
  "presets": [
    {
      "name": "Banner v2"
    }
  ]
}
{% endschema %}
