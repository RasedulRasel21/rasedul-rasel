<style>
  img{
      width: 100%;
      height: auto;
  }
  .header{
    display: none;
  }
  .cus_banner{
      display: flex;
      flex-direction: column;
  }
  .banner_announcement{
      display: flex;
      height: 64px;
      justify-content: space-between;
      align-items: center;
      padding-left: 5rem;
      padding-right: 5rem;
      background: #F5F5F5;
  }
  .announcement_text{
      color: #000;
      font-size: 16px;
  }
  .b_logo{
      display: flex;
      align-items: center;
  }
  .image-with-text{
      display: flex;
      justify-content: space-between;
      padding-left: 5rem;
      padding-right: 5rem;
  }
  .image-with-text-textBox h2{
      font-size: 60px;
      margin: 20px 0;
      font-weight: 600;
  }
  .image-with-text-textBox p{
      max-width: 490px;
      font-size: 18px;
      line-height: 28px;
  }
  .cus_button a{
      display: flex;
      width: auto;
      height: 44px;
      align-items: center;
      font-size: 16px;
      text-decoration: none;
      background: #FFF544;
      color: #000;
      text-align: center;
      position: relative;
      transition: all .35s;
      padding: 0 24px;
  }
  .cus_button a span{
      position: relative;
      z-index: 2;
      display: flex;
      align-items: center;
  }
  .cus_button a:after{
      position: absolute;
      content: "";
      top: 0;
      left: 0;
      width: 0;
      height: 100%;
      background: #000;
      color: #fff;
      transition: all .35s;
  }
  .cus_button a:hover{
      color: #fff;
  }
  .cus_button a:hover:after{
      width: 100%;
  }
  .btn_arrow{
      width: 24px;
      animation: auto;
      margin-left: 10px;
  }
  .b_button a:hover .btn_arrow_black{
      display: none;
  }
  .b_button .btn_arrow_white {
      display: none;
  }
  .b_button a:hover .btn_arrow_white {
      display: block !important;
  }
  .image_with_text_button{
      width: 160px;
  }
  .image_with_text_button a .btn_arrow_black{
      display: none;
  }
  .image_with_text_button a:hover .btn_arrow_black{
      display: block !important;
  }
  .image_with_text_button .btn_arrow_white {
      display: block;
  }
  .image_with_text_button a:hover .btn_arrow_white {
      display: none !important;
  }
  .image_with_text_button a{
      background: #000;
      color: #fff;
  }
  .image_with_text_button a:after{
      position: absolute;
      content: "";
      top: 0;
      left: 0;
      width: 0;
      height: 100%;
      background: #FFF544;
      color: #000;
      transition: all .35s;
  }
  .image_with_text_button a:hover{
      color: #000;
  }
  .header_mb_icon{
      display: none;
  }
  .mb_menu{
      flex-direction: column;
      align-items: center;
      padding: 20px 0;
      gap: 10px;
      position: absolute;
      width: 100%;
      top: -200px;
      background: #F2F2F2;
      transition: all .35s;
  }
  .mb_menu{
      display: none;
  }
  @media only screen and (max-width: 757px){
    .banner_announcement{
      justify-content: space-between;
    }  
    .b_button a{
      display: none;
    }    
    .announcement_text{
      display: none;
    }  
    .header_mb_icon{
      display: block;
  }
    .header_mb_icon .cus_close{
      display: none;
    }
    .menu_active .cus_close{
      display: block !important;
    }
    .menu_active .cus_humb{
      display: none;
    }
    .header_mb_icon .icon{
      display: flex;
      opacity: 1;
      transform: scale(1);
      transition: transform .15s ease, opacity .15s ease;
      height: 2rem;
      width: 2rem;
      fill: none;
      vertical-align: middle;
    }
    .mb_menu{
      display: flex !important;
      flex-direction: column;
      align-items: center;
      padding: 20px 0;
      gap: 10px;
      position: absolute;
      width: 100%;
      top: -200px;
      background: #F2F2F2;
      transition: all .35s;
  }
    .menu_active .mb_menu{
      top: 60px; !important;
  }
    .mb_menu .announcement_text {
      display: block !important;
    }
    .mb_menu .b_button a {
      display: block !important;
    }
  }

</style>
<div class="cus_banner" id="headerIcon">
  {% comment %} announcement bar {% endcomment %}
  <div class="banner_announcement">
    <div class="header_mb_icon">
      <span class="cus_humb" id="menuOpen">{% render 'icon-hamburger' %}</span>
      <span class="cus_close" id="menuclose">{% render 'icon-close' %}</span>
    </div>  
    <div class="b_logo"><img src="{{ section.settings.logo | img_url : 'master' }}"></div>
    <div class="announcement_text">{{ section.settings.ann_text }}</div>
    <div class="b_button cus_button">
      <a href="{{ section.settings.b_url }}"><span>{{ section.settings.b_button_title }} <img class="btn_arrow btn_arrow_black" src="https://cdn.shopify.com/s/files/1/0709/6339/6854/files/Line_15.png?v=1720114463"> <img class="btn_arrow btn_arrow_white" src="https://cdn.shopify.com/s/files/1/0709/6339/6854/files/Line_15_1.png?v=1720114805"></span></a>
    </div>
  </div>
  <div class="mb_menu">
    <div class="announcement_text">{{ section.settings.ann_text }}</div>
    <div class="b_button cus_button">
      <a href="{{ section.settings.b_url }}"><span>{{ section.settings.b_button_title }} <img class="btn_arrow btn_arrow_black" src="https://cdn.shopify.com/s/files/1/0709/6339/6854/files/Line_15.png?v=1720114463"> <img class="btn_arrow btn_arrow_white" src="https://cdn.shopify.com/s/files/1/0709/6339/6854/files/Line_15_1.png?v=1720114805"></span></a>
    </div>
  </div>  

  {% comment %} Banner section {% endcomment %}
  <div class="banner_image">
    <img src="{{ section.settings.b_image | img_url : 'master' }}">
  </div>
  <div class="image-with-text">
    <div class="image-with-text-textBox">
      <h2>{{ section.settings.img_text_title }}</h2>
      <p>{{ section.settings.img_text_subtext }}</p>
      <div class="image_with_text_button cus_button">
        <a href="{{ section.settings.img_text_btn_url }}"><span>{{ section.settings.img_text_btn }} <img class="btn_arrow btn_arrow_black" src="https://cdn.shopify.com/s/files/1/0709/6339/6854/files/Line_15.png?v=1720114463"> <img class="btn_arrow btn_arrow_white" src="https://cdn.shopify.com/s/files/1/0709/6339/6854/files/Line_15_1.png?v=1720114805"></span></a>
      </div> 
    </div>
    <div class="image-with-text-img">
      <img src="{{ section.settings.banner_text_image | img_url : 'master' }}">
    </div>
  </div>
</div>

<script>
  const menuOpen = document.getElementById('menuOpen');
  const menuClose = document.getElementById('menuclose');
  const headerIcon = document.getElementById('headerIcon');
  
  menuOpen.addEventListener('click', function() {
    headerIcon.classList.add('menu_active');
  });
  
  menuClose.addEventListener('click', function() {
    headerIcon.classList.remove('menu_active');
  });

</script>
{% schema %}
{
  "name": "Banner v2",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Announcement Bar"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Add logo"
    },
    {
      "type": "text",
