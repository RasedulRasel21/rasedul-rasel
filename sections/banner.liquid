<style>
    .cus_banner{
        display: flex;
        flex-direction: row;
    }
    .banner_announcement{
        display: flex;
    }
</style>
<div class="cus_banner">
    {% comment %} announcement bar {% endcomment %}
    <div class="banner_announcement">
        <div class="b_logo">{{ section.settings.title }}</div>
        <div class="announcement_text">{{ section.settings.ann_text }}</div>
        <div class="b_button cus_button"><a href="{{ section.settings.b_url }}">{{ section.settings.b_button_title }}</a></div>
    </div>

    {% comment %} Banner section {% endcomment %}
    <div class="banner_image">
        <img src="{{ section.settings.b_image | img_url : 'master' }}">
    </div>
    <div class="image-with-text">
        <div class="image-with-text-textBox">
           <h2>{{ section.settings.img_text_title }}</h2>
           <p>{{ section.settings.img_text_subtext }}</p>
           <a href="{{ section.settings.img_text_btn_url }}" class="cus_button">{{ section.settings.img_text_btn }}</a>
        </div>
        <div class="image-with-text-img">
           <img src="{{ section.settings.banner_text_image | img_url : 'master' }}"> 
        </div> 
    </div>     
</div>
{% schema %}
{
  "name": "Banner v2",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Announcement Bar"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Logo/Title",
      "default": "TISSO VISON"
    },
    {
      "type": "text",
      "id": "ann_text",
      "label": "Announcement text",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "b_button_title",
      "label": "Button Title",
      "default": "CHOOSE GIFT"
    },
    {
      "type": "url",
      "id": "b_url",
      "label": "Button link/Url"
    },
    {
      "type": "header",
      "content": "Banner section"
    },
    {
      "type": "image_picker",
      "id": "b_image",
      "label": "Banner image"
    },
    {
      "type": "text",
      "id": "img_text_title",
      "label": "Banner Title",
      "default": "The Gift Guide"
    },
    {
      "type": "text",
      "id": "img_text_subtext",
      "label": "Banner subtext",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "img_text_btn",
      "label": "Button Title",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "img_text_btn_url",
      "label": "Button link/Url"
    },
    {
      "type": "image_picker",
      "id": "banner_text_image",
      "label": "Banner text image"
    }
    
  ],
  "presets": [
    {
      "name": "Banner v2"
    }
  ]
}
{% endschema %}